<launch>
  <arg name="model" default="$(optenv ROBOT_MODEL nexus_4wd_mecanum)" doc="model type [turtlebot, rosbot, nexus_4wd_mecanum]"/>
  <arg name="x_pos" default="1.8"/>
  <arg name="y_pos" default="1.78"/>
  <arg name="z_pos" default="0.03"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find simulation)/worlds/field.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro $(find robot_description)/urdf/$(arg model).xacro" />
  
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model $(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
</launch>
